<!DOCTYPE html>
<html>
    <head>
        <title>Week 3 - Product Catalog</title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="/assets/styles.css">
        <script src="/assets/functionality.js"></script>
    </head>

    <style>
    
    </style>

    <body>
        <!-- <%=datanew.products[0].title%>
        <img src="assets/1.jpeg"> -->

        <div class="heading">
                <h2>Product Catalog</h2>
        </div>

        <div class="container-fluid divposition">

                <div class="row content">
                    <% for(var i = 0; i < datanew.products.length; i++)
                        { %>

                    <div class="prodstyle col-lg-2"> 
                        <img class="imagesize" style="height: 150px; width: 90px" src="/assets/<%=i + 1 %>.jpeg">
                    </div>
                    
                    <div class="col-lg-10">
                        <h4>  <%= datanew.products[i].title %> </h4>
                            <p><%= datanew.products[i].description %></p>
                            <p><%= datanew.products[i].quantity %></p>
                            <button class="buttonstyle" onclick="deleteProd()">Delete</button>
                            <button class="buttonstyle" onclick="editfield(<%= i + 1 %>)">Edit Info</button>

                        <div id="editdiv<%=i + 1 %>">
                        </div>
                    </br>
                    </div>

                    <% }%>
                </div>
        </div>
    </body>
</html>